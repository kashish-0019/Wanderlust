<% layout("/layouts/boilerplate.ejs") %>

<div class="row">   
    <h1 class="col-8 offset-2">Login</h1> 
    <div class="col-8 offset-2">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-lable">Username</lable>
                <input type="text" name="username" placeholder="Add a username" class="form-control" id="username" required>
                <div class="valid-feedback">Username looks good!</div>
            </div>
            <div class="mb-3">
                <lable for="password" class="form-lable">Password</lable>
                <input type="password" name="password" placeholder="Add password" class="form-control" id="password" required>
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>